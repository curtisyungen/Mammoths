                    <div id="home">
                        <div class="container">

                            {{!-- Header --}}
                            <div class="row">
                                <h1 class="col-5">Post New Activity</h1>
                                <br>
                            </div>
                            {{!-- Activity List --}}
                            <div class="row" id="activityList">
                                <button class="activity btn btn-light" id="runningBtn" name="running">Running</button>
                                <button class="activity btn btn-light" id="strengthBtn" name="strength">Strength
                                    Training</button>
                            </div>
                            <br>

                            {{!-- Running Form --}}
                            <div class="row" id="runningForm">
                                <form class="col-3 offset-4" id="headerForm"> {{!-- Need to change this to
                    submit data to database --}}

                                    <label for="date">Date:
                                        <input type="text" name="date" id="date" autocomplete="off"><br>

                                        <label for="distance">Distance: </label>
                                        <input type="text" name="distance" id="distance" autocomplete="off"><br>

                                        <label for="duration">Duration: </label>
                                        <input type="text" name="duration" id="duration" autocomplete="off"><br>

                                        <label for="pace">Pace: </label> {{!-- Auto-calculate. Conditions = distance/duration fields are
                    filled out --}}
                                        <p id="pace" name="pace">0:00</p><br>

                                        <label for="location">Location: </label>
                                        <input type="text" name="location" id="location" autocomplete="off"><br>

                                        <label for="surface">Surface: </label>
                                        <input type="text" name="surface" id="surface" autocomplete="off"><br><br>

                                        <button type="submit" name="submitRun" class="btn btn-primary"
                                            id="submitRun">Submit</button>
                                </form>
                            </div>

                            <div id="runList"></div>

                            {{!-- Strength Training Form--}}
                            <div class="row" id="strengthForm">

                                {{!-- <form class="clearfix mb-4" action="POST">

